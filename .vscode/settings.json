{
    "cmake.buildOutput": "always",
    "cmake.testOutput": "always",
    "cmake.showOptions": "terminal",
    "cSpell.words": [
        "absl",
        "codegen",
        "flatc",
        "gendb",
        "gtest"
    ],
    "C_Cpp.intelliSenseEngine": "disabled", // disable in favor of clangd
    "clangd.arguments": [
        "--compile-commands-dir=build",
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu"
    ],
    "files.watcherExclude": {
        "**/build/**": true
    },
    "cmake.copyCompileCommands": "${workspaceFolder}/build/compile_commands.json"
}